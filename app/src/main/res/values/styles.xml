<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Animation.Keep" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_keep</item>
        <item name="android:windowExitAnimation">@anim/anim_keep</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HelperTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/purple</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="boxStrokeWidth">@dimen/border_width</item>
        <item name="hintTextColor">@color/purple</item>
        <item name="errorIconDrawable">@null</item>
        <item name="helperTextTextColor">@color/secondary</item>
        <item name="helperTextTextAppearance">@style/HelperTextAppearance</item>
        <item name="placeholderTextColor">@color/secondary</item>
        <item name="errorTextColor">@color/red</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
        <item name="android:textColorHint">@color/secondary</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="colorControlActivated">@color/secondary</item>
        <item name="boxBackgroundColor">@color/bg_input</item>
        <item name="endIconTint">@color/secondary</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textColorHint">@color/secondary</item>
        <item name="android:textCursorDrawable">@drawable/ic_edit_text_cursor</item>
    </style>

    <style name="TextInputEditText.Single">
        <item name="android:inputType">text|textNoSuggestions</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextInputEditText.Multi">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">top|start</item>
    </style>

    <style name="Column">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Section" parent="Column">
        <item name="rRadius">@dimen/section_radius</item>
        <item name="rStrokeColor">@color/primary</item>
        <item name="rStrokeWidth">@dimen/border_width</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_lg</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="Row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:fontFamily">@font/noto_regular</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text|textNoSuggestions</item>
        <item name="android:paddingStart">@dimen/size_sm</item>
        <item name="android:paddingEnd">@dimen/size_sm</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textColorHint">@color/secondary</item>
        <item name="android:textCursorDrawable">@drawable/ic_edit_text_cursor</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="ChatInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/input_height</item>
        <item name="android:maxHeight">@dimen/chat_input_max_height</item>
        <item name="android:fontFamily">@font/noto_regular</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:padding">@dimen/size_sm</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textColorHint">@color/secondary</item>
        <!--        <item name="android:textCursorDrawable">@drawable/ic_edit_text_cursor</item>-->
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:hint">@string/chat_input_hint</item>
    </style>

    <style name="EditText.Single">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EditText.Inline">
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="FormLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_xxl</item>
        <item name="android:layout_marginStart">@dimen/size_normal</item>
        <item name="android:layout_marginEnd">@dimen/size_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/noto_regular</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="TopAppBar">
        <item name="android:theme">@style/Theme.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="collapseIcon">@drawable/ic_close</item>
        <item name="elevation">2dp</item>
        <item name="titleTextAppearance">@style/ToolbarStyle.Title</item>
        <item name="subtitleTextAppearance">@style/ToolbarStyle.Subtitle</item>
    </style>

    <style name="TopAppBar.DrawerContent" parent="TopAppBar">
        <item name="navigationIcon">@null</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="TopAppBar.BottomSheet" parent="TopAppBar">
        <item name="navigationIcon">@null</item>
    </style>

    <style name="BottomAppBar">
        <item name="android:theme">@style/Theme.BottomAppBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="ToolbarStyle.Subtitle" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Subtitle">
        <item name="android:textSize">@dimen/text_size_mini</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="ToolbarStyle.Title" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/noto_medium</item>
        <item name="android:textSize">@dimen/text_size_lg</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="Button" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">@dimen/border_width</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/size_normal</item>
        <item name="android:paddingEnd">@dimen/size_normal</item>
        <item name="android:fontFamily">@font/noto_medium</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/text_size_lg</item>
    </style>

    <style name="Button.Small">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="ActionButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/noto_medium</item>
        <item name="android:textColor">@color/primary</item>
    </style>
    <style name="Button.BottomSheet">
        <item name="android:layout_marginHorizontal">@dimen/size_normal</item>
        <item name="android:layout_marginTop">@dimen/size_xl</item>
        <item name="android:layout_marginBottom">@dimen/size_normal</item>
    </style>

    <style name="SaveButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/size_normal</item>
        <item name="android:layout_marginTop">@dimen/size_xl</item>
        <item name="android:layout_marginBottom">@dimen/size_normal</item>
        <item name="text">@string/save</item>
        <item name="loadingText">@string/saving</item>
    </style>

    <style name="Icon">
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="Icon.Large">
        <item name="android:layout_width">@dimen/icon_size_xl</item>
        <item name="android:layout_height">@dimen/icon_size_xl</item>
    </style>

    <style name="Icon.Chat" parent="Icon.Large">
        <item name="android:layout_marginStart">@dimen/size_sm</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="Fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginHorizontal">@dimen/size_normal</item>
        <item name="android:backgroundTint">#512da8</item>
        <item name="backgroundTint">#fff</item>
        <item name="tint">#fff</item>
        <item name="android:layout_marginBottom">56dp</item>
        <item name="fabCustomSize">48dp</item>
        <item name="elevation">5dp</item>
        <item name="android:scaleType">fitCenter</item>
<!--        <item name="layout_behavior">com.google.android.material.behavior.HideBottomViewOnScrollBehavior</item>-->
    </style>

    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Note">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/size_lg</item>
        <item name="android:layout_marginEnd">@dimen/size_lg</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="Note.Bottom">
        <item name="android:layout_marginTop">@dimen/size_sm</item>
    </style>

    <style name="RVCenterText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/size_xl</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/text_size_lg</item>
    </style>

    <style name="ChatItemDate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginVertical">@dimen/size_sm</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="ChatItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/size_sm</item>
        <item name="android:paddingBottom">@dimen/size_sm</item>
    </style>

    <style name="ChatItemContent" parent="Column">
        <item name="android:layout_marginHorizontal">@dimen/size_normal</item>
        <item name="android:layout_marginTop">@dimen/size_sm</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toBottomOf">@+id/name</item>
    </style>

    <style name="ChatItemContent.Section" parent="ChatItemContent">
        <item name="rRadius">@dimen/section_radius</item>
        <item name="rStrokeColor">@color/primary</item>
        <item name="rStrokeWidth">@dimen/border_width</item>
    </style>

    <style name="HomeItemContainer" parent="Column">
        <item name="android:paddingTop">@dimen/size_sm</item>
        <item name="android:paddingBottom">@dimen/size_sm</item>
    </style>

    <style name="HomeItemTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/size_normal</item>
        <item name="android:fontFamily">@font/noto_medium</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="HomeItemContent" parent="Column">
        <item name="android:layout_marginHorizontal">@dimen/size_normal</item>
        <item name="android:layout_marginTop">@dimen/size_sm</item>
    </style>

    <style name="HomeItemContent.Section" parent="HomeItemContent">
        <item name="rRadius">@dimen/section_radius</item>
        <item name="rStrokeColor">@color/primary</item>
        <item name="rStrokeWidth">@dimen/border_width</item>
    </style>


    <style name="Tabs">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/canvas</item>
        <item name="tabIndicatorColor">@color/purple</item>
        <item name="tabTextColor">@color/primary</item>
        <item name="tabSelectedTextColor">@color/purple</item>
        <item name="tabTextAppearance">@style/tabTextAppearance</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">center</item>
    </style>

    <style name="tabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/noto_medium</item>
    </style>

    <style name="Tabs.Top" parent="Tabs">
        <item name="tabIndicator">@drawable/top_tab_indicator</item>
    </style>

    <style name="SeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:progressBackgroundTint">@color/purple</item>
        <item name="android:progressTint">@color/purple</item>
        <item name="android:thumbTint">@color/purple</item>
        <item name="android:splitTrack">false</item>
        <item name="android:progressBackgroundTintMode">src_in</item>
    </style>

    <style name="DrawerContent">
        <item name="android:layout_width">@dimen/nav_drawer_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@color/canvas</item>
    </style>

    <style name="ItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_lg</item>
        <item name="android:fontFamily">@font/noto_medium</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_marginStart">@dimen/size_normal</item>
        <item name="android:layout_marginEnd">@dimen/size_sm</item>
    </style>

    <style name="Tips">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:layout_marginHorizontal">@dimen/size_normal</item>
    </style>

    <style name="Tips.Bottom" parent="Tips">
        <item name="android:layout_marginTop">@dimen/size_mini</item>
    </style>
</resources>